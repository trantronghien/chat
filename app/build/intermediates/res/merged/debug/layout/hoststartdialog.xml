<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/BgDialog">
    
    <View
        android:layout_width="match_parent"
    	android:layout_height="5dip">
    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:drawableLeft="@drawable/icon_question32"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="Are you sure you want to start the channel ?"
            />

    </LinearLayout>
    

      
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/Linear_button"
        android:layout_gravity="center">
        
        <Button
            android:id="@+id/hostStartOk"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
    	    android:text="OK"
        />

        <Button
            android:id="@+id/hostStartCancel"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
    	    android:text="Cancel"
        />
    </LinearLayout>
</LinearLayout>
